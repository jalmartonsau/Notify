<Window x:Class="Notify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notify"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Title="MainWindow" Height="50" Width="50"
        Background="Transparent">
    <Window.Resources>

        <Style x:Key="PlusButton" TargetType="Border">
            <Setter Property="Background" Value="#2D882D" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#14720F"/>
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>
    
    <Grid Background="Transparent">

        <Border Name="Button" CornerRadius="50" Style="{StaticResource PlusButton}">
            <StackPanel>
                <Rectangle Width="30" Height="3" Fill="White" Margin="0,24,0,0"/>
                <Rectangle Width="3" Height="30" Fill="White" Margin="0,-16,0,0" />
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
